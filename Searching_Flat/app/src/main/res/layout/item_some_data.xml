<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/district_item"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="175dp"
                android:layout_marginTop="2dp"
                android:text="district"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:text="[X]"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/square_item"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/district_item"
                android:layout_alignParentStart="true"
                android:layout_marginStart="175dp"
                android:layout_marginTop="2dp"
                android:text="square"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/cost_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="161dp"
                android:layout_marginEnd="-27dp"
                android:text="cost"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/balcon_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_photo"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="265dp"
                android:text="balcon"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/roomnumber_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/square_item"
                android:layout_marginStart="175dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="26dp"
                android:text="room number"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/flattype_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_photo"
                android:layout_marginTop="96dp"
                android:layout_marginEnd="254dp"
                android:text="flat type"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/repairtype_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_photo"
                android:layout_marginTop="168dp"
                android:text="repair type"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/main_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_next" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>